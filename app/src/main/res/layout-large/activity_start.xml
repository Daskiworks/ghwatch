<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:padding="0dp"
             tools:context=".StartActivity">

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/app_name"
    android:scaleType="centerCrop"
    android:src="@drawable/start_page_background"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <TextView
      android:id="@+id/start_activity_text"
      android:layout_width="480dp"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="32dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="32dp"
      android:text="@string/start_activity_text"
      android:textColor="@color/start_page_text_color"
      android:textSize="20sp"
      android:textStyle="bold"/>

    <TextView
      android:id="@+id/start_activity_text2"
      android:layout_width="480dp"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@id/start_activity_text"
      android:layout_marginEnd="32dp"
      android:layout_marginRight="32dp"
      android:layout_marginTop="32dp"
      android:text="@string/start_activity_text2"
      android:textColor="@color/start_page_text_color"
      android:textSize="20sp"
      android:textStyle="bold"/>

    <TextView
      android:id="@+id/start_activity_text4"
      android:layout_width="480dp"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/start_activity_text2"
      android:layout_marginLeft="32dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="32dp"
      android:text="@string/start_activity_text4"
      android:textColor="@color/start_page_text_color"
      android:textSize="20sp"
      android:textStyle="bold"/>

    <TextView
      android:id="@+id/start_activity_text3"
      android:layout_width="480dp"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_below="@id/start_activity_text4"
      android:layout_marginLeft="32dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="32dp"
      android:text="@string/start_activity_text3"
      android:textColor="@color/start_page_text_color"
      android:textSize="20sp"
      android:textStyle="bold"/>

    <Button
      android:id="@+id/button_login_github"
      style="@style/Widget.AppCompat.Button.Colored"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerInParent="true"
      android:layout_margin="32dp"
      android:paddingBottom="16dp"
      android:paddingLeft="32dp"
      android:paddingRight="32dp"
      android:paddingTop="16dp"
      android:text="@string/button_login_github"
      android:textSize="20sp"
      />
  </RelativeLayout>

</FrameLayout>