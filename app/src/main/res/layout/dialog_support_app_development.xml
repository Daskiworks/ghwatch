<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="16dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/intro_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_sad_intro_text" />
        
        <TextView
            android:id="@+id/text_donated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/dialog_sad_text_donated" 
            android:layout_marginTop="12dp"
            android:textStyle="bold" />
        <Button
          android:id="@+id/button_donate_3"
          style="@style/Widget.AppCompat.Button.Colored"
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"
          android:visibility="gone"
          android:text="@string/dialog_sad_button_donate_3" />
        <Button
            android:id="@+id/button_donate_2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/dialog_sad_button_donate_2" 
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/button_donate_1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/dialog_sad_button_donate_1" />
        
        <Button
            android:id="@+id/button_donate_restore"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/dialog_sad_button_donate_restore" />

        <TextView
            android:id="@+id/title_social"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dialog_sad_title_social" />

        <Button
            android:id="@+id/button_social_rate"
            style="?android:attr/button"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/dialog_sad_button_rate" />

        <Button
            android:id="@+id/button_social_share"
            style="?android:attr/button"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/dialog_sad_button_share" />

        <TextView
            android:id="@+id/title_participate"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dialog_sad_title_participate" />

        <Button
            android:id="@+id/button_bug"
            style="?android:attr/button"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/dialog_sad_button_bug" />

        <Button
            android:id="@+id/button_src"
            style="?android:attr/button"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/dialog_sad_button_src" />
    </LinearLayout>

</ScrollView>